    <Grid Background="{StaticResource ApplicationPageBackgroundThemeBrush}">

        <Image Source="Assets/wallpaper-1220195.png" Stretch="Fill"/>

        <Button x:ConnectionId='1' Content="Press to get started" HorizontalAlignment="Left" Margin="244.43,482.108,0,0" VerticalAlignment="Top"                        FontStyle="Italic" Height="42.25" Width="226.25"/>
